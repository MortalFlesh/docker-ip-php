{
    "name": "mf/docker-ip",
    "authors": [
        {
            "name": "Petr Chromec"
        }
    ],
    "autoload": {
        "psr-4": {
            "MF\\DockerIp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MF\\DockerIp\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.1",
        "symfony/console": "^3.2",
        "symfony/filesystem": "^3.2",
        "symfony/process": "^3.2",
        "symfony/config": "^3.2",
        "symfony/yaml": "^3.2",
        "beberlei/assert": "^2.6",
        "mf/collections-php": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "phpstan/phpstan": "^0.6.3",
        "friendsofphp/php-cs-fixer": "^2.1",
        "squizlabs/php_codesniffer": "^2.8",
        "satooshi/php-coveralls": "^1.0"
    },
    "bin": [
        "bin/docker-ip-console"
    ],
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-bin-dir": "bin",
        "symfony-tests-dir": "tests"
    },
    "scripts": {
        "test": [
            "@cs",
            "@phpunit",
            "@phpstan"
        ],
        "phpstan": "bin/phpstan analyse -l 5 -c phpstan.neon src tests",
        "phpunit": "php -dxdebug.coverage_enable=1 bin/phpunit --configuration phpunit.xml.dist tests",
        "cs": "./bin/phpcs --standard=ruleset.xml .",
        "fix": [
            "./bin/php-cs-fixer fix src",
            "./bin/php-cs-fixer fix tests",
            "./bin/php-cs-fixer fix selenium-tests/tests",
            "./bin/phpcbf --standard=ruleset.xml ."
        ]
    }
}
